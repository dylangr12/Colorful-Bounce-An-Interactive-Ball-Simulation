<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bouncing Ball Simulation</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
        }

        .simulation {
            width: 500px;
            height: 500px;
            border: 2px solid black;
            position: relative;
        }

        .ball {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: red;
            position: absolute;
        }
    </style>
</head>
<body>
    <div class="simulation" id="simulation">
        <div class="ball" id="ball"></div>
    </div>

    <script>
        // JavaScript code for bouncing ball and mouse interaction
        const simulation = document.getElementById('simulation');
        const ball = document.getElementById('ball');

        let ballX = 250;
        let ballY = 250;
        let ballSpeedX = 2;
        let ballSpeedY = -2;

        function updateBallPosition() {
            ballX += ballSpeedX;
            ballY += ballSpeedY;

            if (ballX <= 0 || ballX >= 480) {
                ballSpeedX = -ballSpeedX;
                ball.style.backgroundColor = 'blue';
            }

            if (ballY <= 0 || ballY >= 480) {
                ballSpeedY = -ballSpeedY;
                ball.style.backgroundColor = 'green';
            }

            ball.style.left = ballX + 'px';
            ball.style.top = ballY + 'px';
        }

        simulation.addEventListener('click', (event) => {
            ballX = event.clientX - simulation.offsetLeft - 10;
            ballY = event.clientY - simulation.offsetTop - 10;
            ball.style.left = ballX + 'px';
            ball.style.top = ballY + 'px';
            ball.style.backgroundColor = 'red';
        });

        setInterval(updateBallPosition, 20);
    </script>
</body>
</html>
